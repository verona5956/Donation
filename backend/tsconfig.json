{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "moduleResolution": "node"
  },
  "include": [
    "./hardhat.config.ts",
    "./deploy/**/*.ts",
    "./tasks/**/*.ts",
    "./test/**/*.ts",
    "./types/**/*.ts"
  ]
}


